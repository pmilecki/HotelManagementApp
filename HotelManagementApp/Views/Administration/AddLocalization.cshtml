@model LocalizationModel

<h1>Dodawanie nowej lokalizacji</h1>

<form method="POST" asp-action="AddLocalizationToDB">
    
    <div class="form-group">
        <label asp-for="Floor">Piętro</label>
        <input asp-for="Floor" class="form-control" />
        <span asp-validation-for="Floor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Wing">Skrzydło hotelu</label>
        <input asp-for="Wing" class="form-control" />
        <span asp-validation-for="Wing" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Dodaj lokalizację" />
    </div>
</form>